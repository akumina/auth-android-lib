<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <style name="MAMActivityBaseTheme" ns1:keep="@style/MAMActivityBaseTheme" parent="@android:style/Theme.Material.Light">
    <item name="android:textColor">@android:color/black</item>
    <item name="android:textColorAlertDialogListItem">@android:color/black</item>
    
    <item name="android:colorPrimaryDark">@android:color/black</item>
    <item name="android:alertDialogTheme">@style/MAMAlertDialogTheme</item>
  </style>
    <style name="MAMAlertDialogTheme" ns1:keep="@style/MAMAlertDialogTheme" parent="@android:style/Theme.Material.Light.Dialog.Alert">
    <item name="android:textColor">@android:color/black</item>
    
    <item name="android:buttonStyle">@style/MAMButton</item>
  </style>
    <style name="MAMButton" ns1:keep="@style/MAMButton" parent="@android:style/Widget.Material.Light.Button.Borderless">
    <item name="android:textColor">#024D89</item>
  </style>
    <style name="MAMDialogTheme" ns1:keep="@style/MAMActivityBaseTheme" parent="@android:style/Theme.Material.Light.Dialog">
    <item name="android:alertDialogTheme">@style/MAMAlertDialogTheme</item>
  </style>
    <style name="MAMDialogWithTrasparentBackground" ns1:keep="@style/MAMDialogWithTrasparentBackground" parent="@android:style/Theme.Material.Light.Dialog">
    <item name="android:alertDialogTheme">@style/MAMAlertDialogTheme</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:colorBackgroundCacheHint">@null</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowAnimationStyle">@android:style/Animation</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowContentOverlay">@null</item>
  </style>
</resources>